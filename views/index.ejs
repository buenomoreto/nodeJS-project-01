
<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-sm-8 d-flex justify-content-between mb-3">
          <div>
            <h2>Perguntas</h2>
          </div>
          <div>
            <a href="/perguntar"><button class="btn btn-primary">Envie sua pergunta</button></a>
          </div>
        </div>
        <div class="col-sm-8">
          <% perguntas.forEach(pergunta => { %>
            <div class="card mb-3">
              <div class="card-body">
                <h5> <%= pergunta.titulo %></h4>
              </div>
              <div class="card-footer">
                <a href="/pergunta/<%= pergunta.id %>">
                  <button class="btn btn-dark">
                    Responder
                  </button>
                </a> 
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
</body>
<%- include('partials/footer.ejs') %>
